www.studentcopilot.app {
    tls {
        issuer acme
    }

    # Enhanced TLS configuration
    tls {
        protocols tls1.2 tls1.3
        alpn h2 http/1.1
    }
    
    # Handle static files
    root * /usr/share/nginx/html
    file_server
    
    # Set maximum upload size to 200MB
    request_body {
        max_size 200MB
    }
    
    # Handle API requests
    handle /api/* {
        reverse_proxy c-api-production.up.railway.app {
            header_up Host {upstream_hostport}
            header_down Access-Control-Allow-Origin "*"
            header_down Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE, PATCH"
            header_down Access-Control-Allow-Headers "DNT, User-Agent, X-Requested-With, If-Modified-Since, Cache-Control, Content-Type, Range, Authorization"
        }
    }
    
    # SPA support
    try_files {path} /index.html
}

